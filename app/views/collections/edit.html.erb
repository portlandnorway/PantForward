<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3 form-adjustments">
      <div class="d-flex justify-content-center logo-adjustments">
        <%= image_tag("logo.png", height: '100%', width: '250px')%>
      </div>
      <div class="form">
        <%= render 'collection_form', collection: @collection  %>
        <div class="button-container">
          <%= link_to "Delete this collection", collection_path, method: :delete, class:"button" %>
         </div>
      </div>
    </div>
  </div>
</div>
