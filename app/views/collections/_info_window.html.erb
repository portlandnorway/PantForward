<!-- app/views/collections/_info_window.html.erb -->

<div class="card">
  <% if collection.user.avatar.attached? %>
    <%= cl_image_tag collection.user.avatar.key, class:"avatar-large", alt:"avatar-large" %>
  <% else  %>
    <%= image_tag "https://images.unsplash.com/photo-1530267981375-f0de937f5f13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class:"card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= collection.user.first_name %></h5>
    <p class="card-text"><%= collection.tip %>kr</p>
    <%#= link_to 'Learn more', c_path(tractor), class:"btn btn-primary" %>
  </div>
</div>
